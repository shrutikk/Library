  function reservejournal(bookid){
	
	alert(bookid);
	var reserveServletUrl = "/Library/ReserveJournal?resId="+bookid+"&chkDate="+document.getElementById((bookid+"chkdate")).value+"&retDate="+document.getElementById((bookid+"retdate")).value;
  	window.location.href = reserveServletUrl;
  }
  function requestjournal(bookid){
	  	var reserveServletUrl = "/Library/RequestJournal?pubId="+bookid;
	  	window.location.href = reserveServletUrl;
  }
  function renewjournal(bookid){
	  	var reserveServletUrl = "/Library/RenewBook?pubId="+bookid+"&renewdt="+document.getElementById((bookid+"renewdate")).value;
	  	window.location.href = reserveServletUrl;
}
  </script>
